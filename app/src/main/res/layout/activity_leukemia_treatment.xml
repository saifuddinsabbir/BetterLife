<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:background="#9CDDF8ED"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".LeukemiaTreatment">

<!--___________Customized Toolbar____________________-->
<RelativeLayout
    android:background="#7511AFF6"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">

    <ImageView
        android:id="@+id/treatmentLeukemiaToolBarBackId"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow11"
        android:layout_marginLeft="20dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:textSize="22sp"
        android:fontFamily="@font/balo_bhai"
        android:text="Treatment"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>

<!--____________Bottom Chip Bar______________________-->
<com.ismaeldivita.chipnavigation.ChipNavigationBar
    android:id="@+id/bottomNavbarLeukemiaTreatmentId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/round_corners"
    android:elevation="8dp"
    app:cnb_iconSize="28dp"
    app:cnb_menuResource="@menu/bottom_navbar_leukemia"
    app:cnb_orientationMode="horizontal"
    app:cnb_radius="8dp"
    app:cnb_unselectedColor="@color/black"
    tools:ignore="MissingConstraints" />

</RelativeLayout>